<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_app_statistics_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145px"
        android:id="@+id/ActionBarList3"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="List"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_layout"
            android:textColor="@android:color/white"
            android:id="@+id/ListButton3"/>

    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AppStatisticsList"
        android:layout_below="@+id/buttonbarList3"
        android:layout_above="@+id/ActionBarList3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145px"
        android:orientation="horizontal"
        android:id="@+id/buttonbarList3">

        <Button
            android:text="DAY"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:id="@+id/daybuttonlist3"
            android:background="@drawable/bt_layout"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</RelativeLayout>